# Default CocoaPods source
source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '8.0'

link_with 'Cataracte', 'CataracteTests'

# ignore all warnings from all pods
inhibit_all_warnings!

#A delightful iOS and OS X networking framework http://afnetworking.com
pod "AFNetworking", "~> 2.0"
#AFNetworking 2.0 Extension for Network Request Logging
pod "AFNetworkActivityLogger"

#The easiest way to marshall and unmarshall Dictionary representations such as JSON representation
pod 'EasyMapping', '~> 0.12.0'

#An alternative to Core Data for people who like having direct SQL access.
#pod "FCModel", :git => 'https://github.com/marcoarment/FCModel.git', :branch => 'non-unique-instances'
#Experimental fork of FCModel introducing Non-uniqued NSValueTransformers
pod "FCModel", :git => 'https://github.com/lickel/FCModel.git', :branch => 'non-unique-value-transformers'

#A block-based API for NSValueTransformer, with a growing collection of useful examples.
pod "TransformerKit"

#Bolts is a collection of low-level libraries designed to make developing mobile apps easier.
pod 'Bolts'

#MBProgressHUD is an iOS drop-in class that displays a translucent HUD with an indicator and/or labels while work is being done in a background thread.
pod 'MBProgressHUD', '~> 0.9.1'
